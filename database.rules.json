{
  "rules": {
    ".read": false,
    ".write": false,

    "admins": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$adminId": {
        ".write": "auth != null && (root.child('admins').child(auth.uid).exists() || $adminId === auth.uid)",
        ".validate": true
      }
    },

    "get_quote": {
      ".read": "auth != null",
      ".write": true,
      "$quoteId": {
        ".validate": "newData.hasChildren(['name','email','company','inquiry','privacyAccepted','createdAt']) && newData.child('name').isString() && newData.child('email').isString() && newData.child('company').isString() && newData.child('inquiry').isString() && newData.child('privacyAccepted').isBoolean() && newData.child('createdAt').isNumber()"
      }
    },

    "contact_us": {
      ".read": "auth != null",
      ".write": true,
      "$contactId": {
        ".validate": "newData.hasChildren(['name','email','message','createdAt']) && newData.child('name').isString() && newData.child('email').isString() && newData.child('message').isString() && newData.child('createdAt').isNumber() && (!newData.child('company').exists() || newData.child('company').isString())"
      }
    },

    "notifications": {
      ".read": "auth != null",
      ".write": true
    },

    "blogs": {
      ".read": true,
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".indexOn": ["status", "published"],
      "$blogId": {
        ".validate": true
      }
    },

    "tasksBoard": {
      ".read": true,
      ".write": true
    },

    "chats": {
      ".read": "auth != null",
      ".indexOn": ["uid", "email", "lastUpdated"],

      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren()",

        "name": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 100)"
        },
        "email": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 254)"
        },
        "uid": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "status": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 20)"
        },
        "lastMessage": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 500)"
        },
        "createdAt": { ".validate": "!newData.exists() || newData.isNumber()" },
        "lastUpdated": { ".validate": "!newData.exists() || newData.isNumber()" },
        "tag": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 50)"
        },
        "unread": { ".validate": "!newData.exists() || newData.isNumber()" },
        "pinned": { ".validate": "!newData.exists() || newData.isBoolean()" },

        "messages": {
          "$msgId": {
            ".read": "auth != null",
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['from','text']) && newData.child('from').isString() && (newData.child('from').val() === 'me' || newData.child('from').val() === 'bot' || newData.child('from').val() === 'admin') && newData.child('text').isString() && newData.child('text').val().length >= 1 && newData.child('text').val().length <= 5000",
            "from": { ".validate": "newData.isString()" },
            "text": { ".validate": "newData.isString()" },
            "createdAt": { ".validate": "!newData.exists() || newData.isNumber()" },
            "$other": { ".validate": false }
          }
        },

        "$other": { ".validate": false }
      }
    }
  }
}
